config BR2_PACKAGE_LIBCROSS2D
	bool "libcross2d"
	depends on BR2_PACKAGE_SDL2
	select BR2_PACKAGE_GLM
	select BR2_PACKAGE_LIBCONFIG
	select BR2_PACKAGE_FREETYPE
	select BR2_PACKAGE_ZLIB
	help
	  a c++ cross platform 2d graphic, input, audio and config library.

	  https://github.com/Cpasjuste/libcross2d

comment "libcross2d  needs a toolchain w/ C++,  SDL2"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_PACKAGE_SDL2
